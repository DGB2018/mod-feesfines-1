{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Transfer-types Schema",
  "type":"object",
  "properties":{
    "name":{
      "type":"string"
    },
    "conditions":{
      "type":"object",
      "properties":{
        "never":{
          "type":"boolean"
        },
        "inmediatly":{
          "type":"boolean"
        },
        "totalOwed":{
          "type":"boolean"
        },
        "feeFineOwed":{
          "type":"boolean"
        }
      }
    },
    "interval":{
      "type":"object",
      "properties":{
        "minute":{
          "type":"string"
        },
        "hour":{
          "type":"string"
        },
        "day":{
          "type":"string"
        },
        "week":{
          "type":"string"
        },
        "month":{
          "type":"string"
        }
      }
    },
    "id":{
      "type":"string"
    }
  },
  "additionalProperties":false,
  "required":[
    "id"
  ]
}
