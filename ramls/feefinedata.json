      "type": "string"
    },
    "defaultAmount": {
      "type": "number"
    },
    "chargeNotice": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "actionNotice": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "ownerId": {
      "type": "string"
    },
    "metadata" : {
      "type" : "object",
      "$ref" : "raml-util/schemas/metadata.schema"
    },
    "id": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "feeFineType",
    "ownerId"
   ]
}
